= simple_form_for [parent, resource], validate: true, remote: true, html: { class: 'form-horizontal' } do |f|
  = f.input :name, placeholder: 'Start typing here to create a task...'
  = f.input :deadline, as: :string, placeholder: 'Date',
                       input_html: { class: 'datepicker', id: "datepicker_#{dom_id(resource)}" }
  .modal-footer
    %button.btn{ :'aria-hidden' => true, :'data-dismiss' => :modal } Close
    = f.button :submit, class: 'btn btn-primary', value: 'Update'

:javascript
  Task.init_datepicker()
