%div{id: dom_id(task)}
  .spa12
    .row
      .span1= check_box_tag :done, true
      .span6= best_in_place task, :name, path: project_task_path(task.project, task)
      .span2= task.deadline
      .span4
        %span.handle [move]
        = link_to "Edit"
        = link_to "Destroy", project_task_path(task.project, task), confirm: "Are you sure?", remote: true, method: :delete
