= simple_form_for(resource, as:       resource_name,
                            url:      password_path(resource_name),
                            html:     { method: :put, class: 'form-signin' },
                            validate: true) do |f|
  %h2.form-signin-heading Change your password
  = f.error_notification
  = f.input :reset_password_token, as: :hidden
  = f.full_error :reset_password_token
  = f.input :password, label: "New password", required: true, autofocus: true, placeholder: 'Password',
                       input_html: { class: 'input-block-level' }
  = f.input :password_confirmation, label: "Confirm your new password", required: true,
                                    placeholder: 'Password confirmation', input_html: { class: 'input-block-level' }
  = render "devise/shared/links"
  %br
  = f.button :submit, "Change my password", class: 'btn btn-large btn-primary'

