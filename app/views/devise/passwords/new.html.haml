= simple_form_for(resource, as:       resource_name,
                            url:      password_path(resource_name),
                            html:     { method: :post, class: 'form-signin' },
                            validate: true ) do |f|
  %h2.form-signin-heading Forgot your password?
  = f.error_notification
  = f.input :email, required: true, autofocus: true, placeholder: 'Email address',
                    input_html: { class: 'input-block-level' }
  = render "devise/shared/links"
  %br
  = f.button :submit, "Send me reset password instructions", class: 'btn btn-large btn-primary'
